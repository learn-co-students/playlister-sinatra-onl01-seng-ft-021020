<% if flash.key?(:message) %>
  <%= flash[:message] %>
<% end %>
<h1><%= @song.name %></h1>
<h4>Artist: <a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a></h4>
<h4>Genres:
  <% @song.genres.map do |genre| %>
    <a href="/genres/<%= genre.slug %>"><%= genre.name.titlecase %></a>
  <% end %>
</h4>
