<h1>Edit Song</h1>
<form action='/songs' method='post'>
  <input type="hidden" id="hidden" name="_method" value="patch">
  <input type="hidden" id="hidden" name="song_id" value=<%= @song.id %>>
  <label>Name: </label>
  <input type="text" id="Name" name="name" value="<%= @song.name %>"><br>
  <br>
  <label>Artist: </label>
  <input type="text" id="Artist Name" name="artist" value="<%= @song.artist.name %>"><br>
  <br>
  <label>Genre: </label><br>
  <% Genre.all.each do |genre| %>
    <input type="checkbox" id="<%= genre.name %>" name="genres[]"
            value=<%= genre.id %> <%= "checked" if @genres.include?(genre.id) %>>
                <%= genre.name.titlecase %>
    </input><br>
  <% end %>
  <br>
  <br>
  <input type="submit" id="submit" value="Save">
</form>
